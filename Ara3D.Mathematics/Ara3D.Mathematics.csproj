<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Description>Ara3D.Mathematics is an efficient math library forked from System.Numerics, MonoGame, and Vim.Math3D with additional functionality and a strict struct layout for cross platform serialization.</Description>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageProjectUrl>https://github.com/ara3d/mathematics</PackageProjectUrl>
    <RepositoryUrl>https://github.com/ara3d/mathematics</RepositoryUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md" Link="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\LICENSE" Link="LICENSE" />
  </ItemGroup>

</Project>
